<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/item_rectangle"
    android:padding="@dimen/show_fragment_item_container_padding"
    android:layout_margin="@dimen/show_fragment_item_container_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/show_fragment_user_mock_size"
            android:paddingStart="@dimen/show_fragment_user_mock_padding_start"
            android:text="@string/user"/>
        <TextView
            android:id="@+id/showedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:text="login" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/show_fragment_item_divider_margin_top"
        app:dividerColor="#00FF00"
        />
    <LinearLayout
        android:id="@+id/sectionCommentary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_show_item_commsection_margin_top"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_show_comm_mock_size"
            android:text="@string/commentary"/>
        <TextView
            android:id="@+id/showedReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_show_item_comment_margin_start"
            android:textSize="@dimen/fragment_show_item_comment_text_size"
            android:text="Text" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/show_fragment_item_divider_margin_top"
        app:dividerColor="#00FF00"/>
</LinearLayout>
